{
    "Version": "2012-10-17",
    "Id": "LoggingPolicy",
    "Statement": [
        {
            "Sid": "S3ServerAccessLogsPolicy",
            "Effect": "Allow",
            "Principal": {
                "Service": "logging.s3.amazonaws.com"
            },
            "Action": [
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::schrodingercorp-content-logging*",
            "Condition": {
                "ArnLike": {
                    "aws:SourceArn": "arn:aws:s3:::schrodingercorp-content-prod"
                },
                "StringEquals": {
                    "aws:SourceAccount": "137263334750"
                }
            }
        }
    ]
}